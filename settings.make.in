srcdir=		@srcdir@
VPATH=		@srcdir@$(SUBDIR)

MAJOR=		0
MINOR=		1
SHLIBFILE=	@SHLIBFILE@
SHLIBSONAME=	@SHLIBSONAME@

CC=		@CC@
CFLAGS=		$(AUTOCFLAGS) $(WARNS) $(WERROR) $(DIRCFLAGS) $(XCFLAGS)
AUTOCFLAGS=	@CFLAGS@
WARNS=		@WARNS@
#WERROR=	-Werror

SHLIBCC=	@SHLIBCC@

MKSHLIB_1=	@MKSHLIB_1@
MKSHLIB_2=	@MKSHLIB_2@
MKSHLIB_3=	@MKSHLIB_3@

prefix=		@prefix@
bin_dir=	$(prefix)/bin
lib_dir=	$(prefix)/lib
include_dir=	$(prefix)/include

INSTALL=	install -o 0 -g 0
INSTALL_LIB=	$(INSTALL) -m 755
INSTALL_BIN=	$(INSTALL) -m 755
INSTALL_HDR=	$(INSTALL) -m 644

all:		$(TARGETS)

clean:
		rm -f *.o 

maintainer-clean distclean:	clean
		rm -f $(TARGETS) *~ ./#*# core *.orig *.rej
